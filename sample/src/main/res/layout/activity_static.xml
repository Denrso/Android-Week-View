<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousWeekButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_left"
            android:tint="?colorOnSurface" />

        <TextView
            android:id="@+id/dateRangeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="5"
            android:gravity="center"
            tools:text="01/01/2018" />

        <ImageView
            android:id="@+id/nextWeekButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_right"
            android:tint="?colorOnSurface" />

    </LinearLayout>

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnGap="1dp"
        app:dayBackgroundColor="?android:colorBackground"
        app:daySeparatorColor="?attr/cardBackgroundColor"
        app:eventCornerRadius="4dp"
        app:firstDayOfWeek="monday"
        app:headerRowBackgroundColor="?colorPrimary"
        app:headerRowBottomShadowColor="?android:shadowColor"
        app:headerRowBottomShadowRadius="4dp"
        app:headerRowPadding="12dp"
        app:headerRowTextColor="?colorOnSurface"
        app:horizontalScrollingEnabled="false"
        app:hourHeight="60dp"
        app:hourSeparatorColor="?attr/cardBackgroundColor"
        app:nowLineColor="@color/light_blue"
        app:nowLineDotColor="@color/light_blue"
        app:nowLineDotRadius="5dp"
        app:nowLineStrokeWidth="1dp"
        app:numberOfVisibleDays="7"
        app:overlappingEventGap="1dp"
        app:showDaySeparator="true"
        app:showFirstDayOfWeekFirst="true"
        app:showHeaderRowBottomShadow="true"
        app:showHourSeparator="true"
        app:showNowLine="true"
        app:showNowLineDot="true"
        app:showTimeColumnSeparator="true"
        app:singleDayHorizontalMargin="8dp"
        app:timeColumnBackgroundColor="?android:colorBackground"
        app:timeColumnPadding="8dp"
        app:timeColumnSeparatorColor="?attr/cardBackgroundColor"
        app:timeColumnSeparatorStrokeWidth="1dp"
        app:timeColumnTextColor="?colorOnSurface"
        app:timeColumnTextSize="12sp"
        app:todayBackgroundColor="?android:colorBackground"
        app:todayHeaderTextColor="?colorAccent" />

</LinearLayout>
